{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
{% endblock %}

{% block title %} Formulaire de Vérification de {{ user.name }} {{ user.firstname }}{% endblock %}

{% block body %}
    <div class="container-lg py-5">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="{{ user.displayAvatar|default(asset('img/default_profile.jpg')) }}" alt="Avatar de l'utilisateur" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{ user.name }}</h4>
                                <p class="text-secondary mb-1">
                                    {% if user.tpUser == 1 %}
                                        Etudiant
                                    {% elseif user.tpUser == 2 %}
                                        Entreprise
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {% if user.tpUser == 1 %}
                    <div class="card mb-3 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    {% if  user.cv %}
                                        <a href="{{ asset('uploads/cv/' ~user.cv) }}" target="_blank">Afficher le CV
                                            (PDF)</a>
                                    {% else %}
                                        Aucun CV renseigné
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nom</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.name }}
                            </div>
                        </div>
                        <hr>
                        {% if user.tpUser == 2 %}
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.descriptionEntreprise }}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">N°SIRET</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    {{ user.numSiret }}
                                </div>
                            </div>
                            <hr>
                        {% endif %}
                        {% if user.tpUser == 1 %}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="d-flex align-items-center mb-3 fw-bold">Numéro étudiant</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.numEtud|default('Aucune formation renseignée') }}
                            </div>
                        </div>
                            <hr>
                        {% endif %}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.email }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Téléphone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ user.telephone }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adresse</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                Bay Area, San Francisco, CA
                            </div>
                        </div>
                        <div class="row">
                            {% if user.id == app.user.id %}
                                <div class="col-sm-12">
                                    <a class="btn btn-primary " href="{{ path('app_profile_update', {id: user.id}) }}">Modifier</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                {% if user.tpUser == 1 %}
                                    <h6 class="d-flex align-items-center mb-3 fw-bold">Formation</h6>
                                    {{ user.formation.nom|default('Aucune formation renseignée') }}
                                {% elseif user.tpUser == 2 %}
                                    <h6 class="d-flex align-items-center mb-3 fw-bold">Localisations</h6>
                                    <ul>
                                        {% for localisation in user.localisations %}
                                            <li>{{ localisation.adresse }}
                                                , {{ localisation.codepostal }} {{ localisation.ville }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3 fw-bold">Ecole</h6>
                                    {{ user.ecole.nom|default('Aucune école renseignée') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <ul>
        <li>Nom : {{ user.name }}</li>
        <li>Prénom : {{ user.firstname }}</li>
        <li>Email : {{ user.email }}</li>
        <li>Numéro de Téléphone : {{ user.telephone }}</li>
        <li>Numéro Etudiant : {{ user.numEtud }}</li>
        <li>Numéro de Siret : {{ user.numSiret }}</li>
        <li>Description Entreprise : {{ user.descriptionEntreprise }}</li>
    </ul>
    {{ form_start(form, {'attr': {'class': 'd-flex'}}) }}
        {{ form_row(form.confirm, {'label': 'Confirmer', 'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_row(form.deny, {'label': 'Refuser', 'attr': {'class': 'btn btn-secondary'}}) }}
    {{ form_end(form) }}


{% endblock %}
