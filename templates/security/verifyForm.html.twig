{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
{% endblock %}

{% block title %} Formulaire de Vérification de {{ user.name }} {{ user.firstname }}{% endblock %}

{% block body %}
    <ul>
        <li>Nom : {{ user.name }}</li>
        <li>Prénom : {{ user.firstname }}</li>
        <li>Email : {{ user.email }}</li>
        <li>Numéro de Téléphone : {{ user.telephone }}</li>
        <li>Numéro Etudiant : {{ user.numEtud }}</li>
        <li>Numéro de Siret : {{ user.numSiret }}</li>
        <li>Description Entreprise : {{ user.descriptionEntreprise }}</li>
    </ul>
    {{ form_start(form, {'attr': {'class': 'd-flex'}}) }}
        {{ form_row(form.confirm, {'label': 'Confirmer', 'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_row(form.deny, {'label': 'Refuser', 'attr': {'class': 'btn btn-secondary'}}) }}
    {{ form_end(form) }}


{% endblock %}
