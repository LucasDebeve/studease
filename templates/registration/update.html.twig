{% extends 'base.html.twig' %}

{% set noms = "#{user.firstname|capitalize} #{user.name|upper}" %}

{% block title %}
    Modification du profile de {{ user.firstname|capitalize }} {{ user.name|upper }}
{% endblock %}

{% block body %}
    <div class="container-lg py-5">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="{{ user.displayAvatar|default(asset('img/default_profile.jpg')) }}"
                                 alt="Avatar de l'utilisateur" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{ noms }}</h4>
                                <p class="text-secondary mb-1">
                                    {% if user.tpUser == 1 %}
                                        Etudiant
                                    {% elseif user.tpUser == 2 %}
                                        Entreprise
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'card mb-3'}}) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{ form_label(form.name) }}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ form_widget(form.name) }}
                        </div>
                    </div>
                    <hr>
                    {% if user.tpUser == 1 %}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.firstname) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.firstname) }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.numEtud) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.numEtud) }}
                            </div>
                        </div>
                        <hr>
                    {% elseif user.tpUser == 2 %}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.descriptionEntreprise) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.descriptionEntreprise) }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.numSiret) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.numSiret) }}
                            </div>
                        </div>
                        <hr>
                    {% endif %}
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{ form_label(form.email) }}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{ form_label(form.telephone) }}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ form_widget(form.telephone) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{ form_label(form.password) }}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ form_widget(form.password) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Address</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            Bay Area, San Francisco, CA
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">{{ form_label(form.avatar) }}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{ form_widget(form.avatar) }}
                        </div>
                    </div>
                    <hr>
                    {% if user.tpUser == 1 %}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.cv) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.cv) }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.ecole) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.ecole) }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{ form_label(form.formation) }}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{ form_widget(form.formation) }}
                            </div>
                        </div>
                        <hr>
                    {% endif %}
                    <div class="row">
                        {% if user.id == app.user.id %}
                            <div class="col-sm-12">
                                <button class="btn btn-primary" type="submit">Enregistrer</button>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
{% endblock %}

