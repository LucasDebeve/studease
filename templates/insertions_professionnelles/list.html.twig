{% extends 'base.html.twig' %}
{% set titre = "Liste des Insertions" %}

{% block title %}{{ titre }}{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/insertions/style.css') }}">
{% endblock %}

{% block body %}
    <h1>{{ titre }}</h1>
    {% if insertions is empty %}
        <p>Aucun stages ou alternances rentr√©s pour le moment.</p>
    {% else %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3">
            {% for insertion in insertions %}
                <div class="col">
                    <div class="insertion">
                        <a href="{{ path('app_detail_insertions_professionnelles', {id: insertion.id }) }}" class="insertion">
                            <div class="row">
                                <div class="col">
                                    <img src="{{ asset('img/default_profile.jpg') }}" alt="Logo de l'entreprise {{ insertion.company.name }}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col insertion_intitule">{{ insertion.titre }}</div>
                            </div>
                            <div class="row insertion_infos">
                                <div class="col-md-auto insertion_duree">{{ insertion.duree }} jours</div>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}



