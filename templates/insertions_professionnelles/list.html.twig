{% extends 'base.html.twig' %}
{% set titre = "Liste des Insertions" %}

{% block title %}{{ titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        input.candidat:checked + div.card {
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
    <h1>{{ titre }}</h1>
    {% if insertions is empty %}
        <p>Aucun stages ou alternances rentrés pour le moment.</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4" id="insertions">
            {% for insertion in insertions %}
                <div class="col">
                    <a href="{{ path('app_detail_insertions_professionnelles', {id: insertion.id}) }}" class="text-decoration-none text-dark">
                        <div class="card h-100">
                            <img src="{{ asset('img/default_profile.jpg') }}" class="card-img-top" alt="Logo de l'entreprise {{ insertion.company.name }}" width="50">
                            <div class="card-body">
                                <h5 class="card-title">{{ insertion.titre }}</h5>
                            </div>
                            <div class="card-footer">
                                {% set difference = date( 'now'|date() ).diff(date(insertion.dateDeb)) %}
                                {% set leftDays = difference.days %}
                                {% if leftDays > 1 %}
                                    <small class="text-muted">Commencé il y a {{ leftDays }} jours</small>
                                {% elseif leftDays == 0 %}
                                    <small class="text-muted">Commencé aujourd'hui</small>
                                {% else %}
                                    <small class="text-muted">Commencé hier</small>
                                {% endif %}
                                <div class="mt-2">
                                    <a href="{{ path('app_update_insertions_pro', {id: insertion.id}) }}"><span class="material-symbols-outlined text-warning">edit</span></a>
                                    <a href="{{ path('app_delete_insertions_pro', {id: insertion.id}) }}"><span class="material-symbols-outlined text-danger">delete</span></a>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
            <div class="col">
                <a href="{{ path('app_create_insertions_pro') }}" class="text-decoration-none text-dark">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-center">
                                <span class="material-symbols-outlined display-1">add</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}



