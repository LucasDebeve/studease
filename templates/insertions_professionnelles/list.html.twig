{% extends 'base.html.twig' %}
{% set titre = "Liste des Insertions" %}

{% block title %}{{ titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        input.candidat:checked + div.card {
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-lg p-3 my-5 shadow">
        <h1>{{ titre }}</h1>
        {% if insertions is empty %}
            <p>Aucun stages ou alternances rentr√©s pour le moment.</p>
        {% else %}
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4" id="insertions">
                {% for insertion in insertions %}
                    {{ include('insertions_professionnelles/_result.html.twig', {'insertion': insertion, 'with_button': true}) }}
                {% endfor %}
                <div class="col">
                    <a href="{{ path('app_create_insertions_pro') }}" class="text-decoration-none text-dark">
                        <div class="card h-100">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <span class="material-symbols-outlined display-1">add</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}



